<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReyesMProgII.MainPage"
             BackgroundColor="#F2E6EE">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,30"
            Spacing="10"
            VerticalOptions="Center"
            HorizontalOptions="Center">
            <Label
                Text="Bienvenido a la aplicación de Michelle Reyes!"
                TextColor="#010030"
                FontSize="40"
                 />
            <Image
                Source="imagen_luna.png"
                HeightRequest="185"
                Aspect="AspectFit"
                />
            
            <Button 
                BackgroundColor="#010030"
                Text="CHISTES" 
                HorizontalOptions="Center" 
                FontSize="20"
                TextColor="LavenderBlush"
                Clicked="BotonAChistes"/>
            <Button 
                BackgroundColor="#010030"
                Text="ABOUT" 
                HorizontalOptions="Center" 
                FontSize="20"
                TextColor="LavenderBlush"
                Clicked="BotonAAbout"/>
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
